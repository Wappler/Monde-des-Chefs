{
  "meta": {
    "options": {
      "linkedFile": "/views/layouts/main.ejs",
      "linkedForm": "frmPasswordForgot"
    },
    "$_POST": [
      {
        "type": "text",
        "fieldName": "email",
        "options": {
          "rules": {
            "core:required": {
              "param": ""
            },
            "core:email": {
              "param": ""
            }
          }
        },
        "name": "email"
      }
    ]
  },
  "exec": {
    "steps": [
      {
        "name": "email",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{$_POST.email.lowercase()}}"
        },
        "meta": [],
        "outputType": "text"
      },
      {
        "name": "validate",
        "module": "validator",
        "action": "validate",
        "options": {
          "data": [
            {
              "name": "validate_1",
              "value": "{{email}}",
              "rules": {
                "db:exists": {
                  "param": {
                    "connection": "db",
                    "table": "users",
                    "column": "email"
                  }
                }
              },
              "fieldName": "email"
            }
          ]
        }
      },
      {
        "name": "query",
        "module": "dbconnector",
        "action": "single",
        "options": {
          "connection": "db",
          "sql": {
            "type": "SELECT",
            "columns": [
              {
                "table": "users",
                "column": "password"
              }
            ],
            "table": {
              "name": "users"
            },
            "joins": [],
            "wheres": {
              "condition": "AND",
              "rules": [
                {
                  "id": "users.email",
                  "field": "users.email",
                  "type": "string",
                  "operator": "equal",
                  "value": "{{email}}",
                  "data": {
                    "table": "users",
                    "column": "email",
                    "type": "text"
                  },
                  "operation": "="
                }
              ],
              "conditional": null,
              "valid": true
            },
            "query": "SELECT password\nFROM users\nWHERE email = :P1 /* {{email}} */",
            "params": [
              {
                "operator": "equal",
                "type": "expression",
                "name": ":P1",
                "value": "{{email}}"
              }
            ]
          }
        },
        "meta": [
          {
            "type": "text",
            "name": "password"
          }
        ],
        "outputType": "object"
      },
      {
        "name": "hash",
        "module": "core",
        "action": "setvalue",
        "options": {
          "key": "hash",
          "value": "{{email.sha1(query.password)}}"
        },
        "meta": [],
        "outputType": "text"
      },
      {
        "name": "",
        "module": "mail",
        "action": "send",
        "options": {
          "instance": "mail",
          "subject": "Password Reset",
          "fromName": "Monde des Chefs",
          "fromEmail": "info@mondedeschefs.com",
          "replyTo": "info@mondedeschefs.com",
          "toEmail": "{{email}}",
          "contentType": "html",
          "body": "<p>Click <a href=\"http://localhost:3000/password-reset?email={{email}}&id={{hash}}\">here </a>to reset your password</p>"
        }
      }
    ]
  }
}