{
  "meta": {
    "options": {
      "linkedFile": "/views/layouts/main.ejs",
      "linkedForm": "frmRegister"
    },
    "$_POST": [
      {
        "type": "text",
        "fieldName": "firstname",
        "options": {
          "rules": {
            "core:required": {
              "param": ""
            }
          }
        },
        "name": "firstname"
      },
      {
        "type": "text",
        "fieldName": "lastname",
        "options": {
          "rules": {
            "core:required": {
              "param": ""
            }
          }
        },
        "name": "lastname"
      },
      {
        "type": "text",
        "fieldName": "email",
        "options": {
          "rules": {
            "core:required": {
              "param": ""
            },
            "core:email": {
              "param": ""
            }
          }
        },
        "name": "email"
      },
      {
        "type": "text",
        "fieldName": "password",
        "options": {
          "rules": {
            "core:required": {
              "param": ""
            }
          }
        },
        "name": "password"
      },
      {
        "type": "text",
        "fieldName": "password2",
        "options": {
          "rules": {
            "core:required": {
              "param": ""
            },
            "core:equalTo": {
              "param": "password"
            }
          }
        },
        "name": "password2"
      }
    ]
  },
  "exec": {
    "steps": [
      {
        "name": "email",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{$_POST.email.lowercase()}}"
        },
        "meta": [],
        "outputType": "text"
      },
      {
        "name": "validate",
        "module": "validator",
        "action": "validate",
        "options": {
          "data": [
            {
              "name": "validate_1",
              "value": "{{email}}",
              "rules": {
                "db:notexists": {
                  "param": {
                    "connection": "db",
                    "table": "users",
                    "column": "email"
                  }
                }
              },
              "fieldName": "email"
            }
          ]
        }
      },
      {
        "name": "insertUser",
        "module": "dbupdater",
        "action": "insert",
        "options": {
          "connection": "db",
          "sql": {
            "type": "insert",
            "values": [
              {
                "table": "users",
                "column": "firstname",
                "type": "text",
                "value": "{{$_POST.firstname}}"
              },
              {
                "table": "users",
                "column": "lastname",
                "type": "text",
                "value": "{{$_POST.lastname}}"
              },
              {
                "table": "users",
                "column": "email",
                "type": "text",
                "value": "{{email}}"
              },
              {
                "table": "users",
                "column": "password",
                "type": "text",
                "value": "{{$_POST.password.sha256('mondedeschefs')}}"
              },
              {
                "table": "users",
                "column": "created",
                "type": "datetime",
                "value": "{{NOW}}"
              }
            ],
            "table": "users",
            "returning": "userID",
            "query": "INSERT INTO users\n(firstname, lastname, email, password, created) VALUES (:P1 /* {{$_POST.firstname}} */, :P2 /* {{$_POST.lastname}} */, :P3 /* {{email}} */, :P4 /* {{$_POST.password.sha256('mondedeschefs')}} */, :P5 /* {{NOW}} */)",
            "params": [
              {
                "name": ":P1",
                "type": "expression",
                "value": "{{$_POST.firstname}}"
              },
              {
                "name": ":P2",
                "type": "expression",
                "value": "{{$_POST.lastname}}"
              },
              {
                "name": ":P3",
                "type": "expression",
                "value": "{{email}}"
              },
              {
                "name": ":P4",
                "type": "expression",
                "value": "{{$_POST.password.sha256('mondedeschefs')}}"
              },
              {
                "name": ":P5",
                "type": "expression",
                "value": "{{NOW}}"
              }
            ]
          }
        },
        "meta": [
          {
            "name": "identity",
            "type": "text"
          },
          {
            "name": "affected",
            "type": "number"
          }
        ],
        "output": false
      },
      {
        "name": "",
        "module": "mail",
        "action": "send",
        "options": {
          "instance": "mail",
          "subject": "Registration Confirmation",
          "fromName": "Monde des Chefs",
          "fromEmail": "info@mondedeschefs.com",
          "toName": "{{$_POST.firstname+' '+$_POST.lastname}}",
          "toEmail": "{{email}}",
          "body": "Thank you for your registration to Monde des Chefs.\n\nThe login details are:\nUsername: your email address\nPassowrd: {{$_POST.password}}\n\nThe team at Monde des Chefs.",
          "replyTo": "info@mondedeschefs.com"
        }
      },
      {
        "name": "identity",
        "module": "auth",
        "action": "login",
        "options": {
          "provider": "security",
          "username": "{{email}}",
          "remember": 1,
          "password": "{{$_POST.password.sha256('mondedeschefs')}}"
        },
        "output": true,
        "meta": []
      }
    ]
  }
}